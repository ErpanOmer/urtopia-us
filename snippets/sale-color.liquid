{% style %}
:root {
    --sale-color1: #B72113;
    --sale-color2: #DD7800;
    --sale-color3: #FF7600;
    --sale-color4: #EA350A;

    --sale-banner-background-image-pc: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/vz_2x_3a072494-ce5c-4e0b-8792-fc3183072a2f.jpg?v=1693205608');
    --sale-banner-background-image-mb: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Mask_Group_18696_2x_92f10b3d-7d7e-4121-a103-585db5eef17a.jpg?v=1693205855');
    --sale-banner-image-max-width: 390px;
    --sale-banner-image-max-width-mb: 160px;

    --sale-collection-image: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/1_2x_7664d4d2-6032-43a7-9c0f-b7439444b540.png?v=1693207354');
    --sale-collection-image-max-width: 550px;

    --sale-bike-tags1: linear-gradient(90deg, var(--sale-color1), var(--sale-color1));
    --sale-bike-tags2: linear-gradient(90deg, var(--sale-color2), var(--sale-color2));

    --sale-order-page-sale-background: linear-gradient(-90deg, var(--sale-color3), var(--sale-color4));
    --sale-order-page-acc-background: linear-gradient(-90deg, var(--sale-color3), var(--sale-color4));
    --sale-order-page-text-color: var(--sale-color4);

    --chord-sale-banner-background-image-pc: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Group_22742_2x_08212bf1-bd91-437a-8c2e-23efbf7886f6.jpg?v=1692343557');
    --chord-sale-banner-background-image-mb: url('https://cdn.shopify.com/s/files/1/0633/2068/6808/files/sdd_2x_816e443e-a591-4106-9a2a-0882b191c315.jpg?v=1692344655');
    --chord-sale-banner-image-max-width: 390px;
    --chord-sale-banner-image-max-width-mb: 160px;
}
{% endstyle %}