{% style %}
:root {
    --sale-color1: #D35320;
    --sale-color2: #FCB041;
    --sale-color3: #EA9E67;
    --sale-color4: #EB5A2D;
    --sale-color5: #EB5E31;

    --sale-banner-background-image-pc: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Group_21454_2x_78d13251-b43a-45ae-91a0-a820b8dabaf1.jpg?v=1694418277');
    --sale-banner-background-image-mb: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Group_21453_2x_d8b18964-619a-47e5-8b80-e3226016f599.jpg?v=1694418379');
    --sale-banner-image-max-width: 300px;
    --sale-banner-image-max-width-mb: 150px;
    --sale-banner-text-color: #fff;

    --sale-collection-image: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Group_21455_2x_9684c4d7-487d-42f7-9660-d60cd8c531a7.png?v=1694419109');
    --sale-collection-image-max-width: 550px;

    --sale-bike-tags1: linear-gradient(90deg, var(--sale-color1), var(--sale-color1));
    --sale-bike-tags2: linear-gradient(90deg, var(--sale-color2), var(--sale-color2));

    --sale-order-page-sale-background: linear-gradient(-90deg, var(--sale-color3), var(--sale-color4));
    --sale-order-page-acc-background: linear-gradient(-90deg, var(--sale-color3), var(--sale-color4));
    --sale-order-page-text-color: var(--sale-color5);

    --chord-sale-banner-background-image-pc: url('https://cdn.shopify.com/s/files/1/0583/5810/4213/files/Group_22742_2x_08212bf1-bd91-437a-8c2e-23efbf7886f6.jpg?v=1692343557');
    --chord-sale-banner-background-image-mb: url('https://cdn.shopify.com/s/files/1/0633/2068/6808/files/sdd_2x_816e443e-a591-4106-9a2a-0882b191c315.jpg?v=1692344655');
    --chord-sale-banner-image-max-width: 300px;
    --chord-sale-banner-image-max-width-mb: 150px;
}
{% endstyle %}