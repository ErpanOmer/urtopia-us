<style>
  .makes {
    background-color: #f7f8fa;
    padding: 15vh 0;
  }
  
  .makes .centeral-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }


  .makes .centeral-content > img {
    max-width: 950px;
  }
  
  .compare {
    display: grid;
    grid-template-columns: 3fr 4.5fr 4.5fr;
    max-width: 950px;
    width: 100%;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 15px;
    padding: 0 40px;
    margin: 12.5vh 0;
    box-sizing: border-box;
  }
  .compare > div {
    display: flex;
    flex-direction: column;
  }
  .compare > div span {
    display: flex;
    flex-direction: column;
    text-align: left;
    padding: 22px 0;
    border-bottom: 1px solid #e9e9e9;
  }
  .compare > div span:last-child {
    border-bottom: none;
  }
  .compare > div img {
    max-width: 220px;
    place-self: center;
    height: 150px;
    width: auto;
    object-fit: contain;
    object-position: center;
  }
  .compare > div:nth-child(2) {
    background: linear-gradient(180deg, #6b97be, #151d38);
    box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.1529411765);
    border-radius: 15px;
    color: #fff;
    margin: -30px 0;
    padding: 30px 0;
  }
  .compare > div:nth-child(2) span {
    border-bottom-color: rgba(102, 102, 102, 0.2078431373);
    text-align: center;
  }
  .compare > div:nth-child(3) span {
    text-align: center;
  }


  @media (max-width: 767px) {
    .makes {
        padding: 60px 0;
    }

    .compare {
        padding: 0 15px;
        margin: 40px 0 60px;
    }

    .compare div span {
        font-size: 12px;
        padding: 0 8px;
        height: 60px;
        justify-content: center;
    }

    .compare > div img {
        height: 56px;
    }

    .compare > div:nth-child(2) {
        margin: -15px 0;
        padding: 15px 0;
    }

    .makes .centeral-content {
        padding: 0 15px;
    }


    .makes .centeral-content .u36Medium_v2 {
        font-size: 18px;
        text-align: center;
    }
  }
</style>


<div class="makes">
  <div class="centeral-content">
     <div class="compare">
        <div>
        </div>
        <div>
            <img
            src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/cccc_2x_366a8576-c889-4210-8bbf-05fa1c327bf8.png?v=1731912593"
            alt=""
            >
        </div>
        <div>
            <img
            src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/cccc_2x_366a8576-c889-4210-8bbf-05fa1c327bf8.png?v=1731912593"
            alt=""
            >
        </div>
        </div>
  </div>
</div>


<script>
    $('.makes .compare img').each(function (index) {
        $(this).attr('src', global_config.{{ config }}.compare.style[`image_${index}`]);
    })

    const parameterssss = global_config.{{ config }}.compare.parameters

    for (let index = 0; index < parameterssss.length; index++) {
        const arr = parameterssss[index];

        if (index === 0) {
            $(`.makes .compare div:nth-child(1)`).append(`<span class="flex-1"></span>`)
            $(`.makes .compare div:nth-child(2)`).append(`<span class="u20Medium_v2">${arr[1]}</span>`)
            $(`.makes .compare div:nth-child(3)`).append(`<span class="u20Medium_v2">${arr[2]}</span>`)
            continue
        }

        for (let j = 0; j < arr.length; j++) {
            $(`.makes .compare div:nth-child(${j + 1})`).append(`<span class="u17Medium_v2">${arr[j]}</span>`)
        }
    }
    

    $('.makes .compare').before(global_config.{{ config }}.compare.style.title);
    $('.makes .compare').after(`<img src="${global_config.is_pc ? global_config.{{ config }}.compare.style.image_pc : global_config.{{ config }}.compare.style.image_mb}"/>`);
</script>
