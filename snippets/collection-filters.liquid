<script type="module">
  // Wait for DOM ready
  document.addEventListener('DOMContentLoaded', function() {
    var filtersContainer = document.querySelector('.filters');
    if (!filtersContainer) return;

    // Accordion toggle functionality
    filtersContainer.addEventListener('click', function(e) {
      var header = e.target.closest('.filters__section-header');
      if (!header) return;
      
      var section = header.closest('.filters__section');
      section.classList.toggle('is-collapsed');
      
      var content = section.querySelector('.filters__section-content');
      if (section.classList.contains('is-collapsed')) {
        content.style.maxHeight = '0';
      } else {
        content.style.maxHeight = content.scrollHeight + 'px';
      }
    });

    // Initialize content heights
    var contentElements = filtersContainer.querySelectorAll('.filters__section-content');
    contentElements.forEach(function(content) {
      var section = content.closest('.filters__section');
      if (!section.classList.contains('is-collapsed')) {
        content.style.maxHeight = content.scrollHeight + 'px';
      }
    });

    // Update active filter count
    function updateFilterCount() {
      var activeCount = 0;
      
      // Count checked checkboxes
      var checkedCheckboxes = filtersContainer.querySelectorAll('.filters__checkbox-option input[type="checkbox"]:checked');
      activeCount += checkedCheckboxes.length;
      
      // Count selected radio groups (each group counts as 1 if any is checked)
      var radioGroups = {};
      var checkedRadios = filtersContainer.querySelectorAll('.filters__radio-option input[type="radio"]:checked');
      checkedRadios.forEach(function(radio) {
        radioGroups[radio.name] = true;
      });
      activeCount += Object.keys(radioGroups).length;
      
      var activeCountEl = filtersContainer.querySelector('.js-active-count');
      if (activeCountEl) {
        activeCountEl.textContent = activeCount;
      }
      
      // Show/hide clear link based on active filters
      var clearLink = filtersContainer.querySelector('.js-clear-filters');
      if (clearLink) {
        clearLink.style.display = activeCount > 0 ? 'inline' : 'none';
      }
    }

    // Handle checkbox/radio changes
    filtersContainer.addEventListener('change', function(e) {
      var input = e.target;
      if (input.type === 'checkbox' || input.type === 'radio') {
        updateFilterCount();
        
        // Dispatch custom event for external handling
        var event = new CustomEvent('filters:changed', {
          detail: {
            filterType: input.name,
            filterValue: input.value,
            isChecked: input.checked
          }
        });
        document.dispatchEvent(event);
      }
    });

    // Clear all filters
    var clearLink = filtersContainer.querySelector('.js-clear-filters');
    if (clearLink) {
      clearLink.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Uncheck all checkboxes
        var checkboxes = filtersContainer.querySelectorAll('.filters__checkbox-option input[type="checkbox"]');
        checkboxes.forEach(function(checkbox) {
          checkbox.checked = false;
        });
        
        // Reset radio buttons
        var radios = filtersContainer.querySelectorAll('.filters__radio-option input[type="radio"]');
        radios.forEach(function(radio) {
          radio.checked = false;
        });
        
        updateFilterCount();
        
        // Dispatch custom event
        var event = new CustomEvent('filters:cleared');
        document.dispatchEvent(event);
      });
    }

    // Initial count update
    updateFilterCount();
  });
</script>

