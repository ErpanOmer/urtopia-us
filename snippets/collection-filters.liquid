<script type="module">
  // Wait for DOM and jQuery ready
  $(function() {
    var $filtersContainer = $('.filters');
    
    // Accordion toggle functionality
    $filtersContainer.on('click', '.filters__section-header', function() {
      var $section = $(this).closest('.filters__section');
      $section.toggleClass('is-collapsed');
      
      var $content = $section.find('.filters__section-content');
      if ($section.hasClass('is-collapsed')) {
        $content.css('max-height', '0');
      } else {
        $content.css('max-height', $content.prop('scrollHeight') + 'px');
      }
    });

    // Initialize content heights
    $filtersContainer.find('.filters__section-content').each(function() {
      var $content = $(this);
      var $section = $content.closest('.filters__section');
      if (!$section.hasClass('is-collapsed')) {
        $content.css('max-height', $content.prop('scrollHeight') + 'px');
      }
    });

    // Update active filter count
    function updateFilterCount() {
      var activeCount = 0;
      
      // Count checked checkboxes
      $filtersContainer.find('.filters__checkbox-option input[type="checkbox"]:checked').each(function() {
        activeCount++;
      });
      
      // Count selected radio (if any is checked)
      var $selectedRadio = $filtersContainer.find('.filters__radio-option input[type="radio"]:checked');
      if ($selectedRadio.length > 0) {
        activeCount++;
      }
      
      $filtersContainer.find('.js-active-count').text(activeCount);
      
      // Show/hide clear link based on active filters
      var $clearLink = $filtersContainer.find('.js-clear-filters');
      if (activeCount > 0) {
        $clearLink.css('display', 'inline');
      } else {
        $clearLink.css('display', 'none');
      }
    }

    // Handle checkbox/radio changes
    $filtersContainer.on('change', 'input[type="checkbox"], input[type="radio"]', function() {
      updateFilterCount();
      
      // Trigger custom event for external handling
      $(document).trigger('filters:changed', {
        filterType: $(this).attr('name'),
        filterValue: $(this).val(),
        isChecked: $(this).is(':checked')
      });
    });

    // Clear all filters
    $filtersContainer.on('click', '.js-clear-filters', function(e) {
      e.preventDefault();
      
      // Uncheck all checkboxes
      $filtersContainer.find('.filters__checkbox-option input[type="checkbox"]').prop('checked', false);
      
      // Reset radio buttons
      $filtersContainer.find('.filters__radio-option input[type="radio"]').prop('checked', false);
      
      updateFilterCount();
      
      // Trigger custom event
      $(document).trigger('filters:cleared');
    });

    // Initial count update
    updateFilterCount();
  });
</script>
