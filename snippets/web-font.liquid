{%- assign font_list = shop.metaobjects.web_font_list['web-font-list'].item.value  -%}
{% for item in font_list %}
  {%- if item.preload -%}
    {{ item.font_src | file_url | preload_tag: as: 'font', type: "font/woff2", crossorigin: "anonymous" }}
  {%- endif -%}
{%- endfor -%}
{% style %}
{%- for item in font_list -%}
    @font-face {
        font-family: "{{ item.font_family }}";
        src: url({{ item.font_src | file_url  }}) format("woff2");
        font-weight: {{ item.font_weight }};
        font-display: {{ item.font_display }};
        font-style: normal;
        font-stretch: normal;
        unicode-range: U+0020-007E;
    }
{% endfor %}
{% endstyle %}