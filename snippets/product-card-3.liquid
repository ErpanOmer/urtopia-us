<style>
    @media (min-width: 768px) {
        .ebike-products .product-grid .product-card .sssss {
            max-width: 95%;
        }
    }

    .ebike-products .product-grid .product-card .dots {
        margin: 0;
    }

    .ebike-products .product-grid .product-card .my-button {
        background-color: #B18A39;
        color: #fff;
        border-color: #B18A39;
    }

    .ebike-products .product-grid .product-card {
        overflow: unset;
    }

    .ebike-products .product-grid .product-card:before {
          color: #B18A39;
          background-color: #E0BD7615;
    }

.coupon {
  position: absolute;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0px 15px 0 12.5px;
  background: linear-gradient(135deg, #b6862e, #e6c16b);
  color: #fff;
  font-weight: bold;
  font-size: 16px;
  border-radius: 5px;
  top: 15px;
  left: 15px;
  transform: translateX(-29px);
}

/* 左右两侧的“缺口” */
.coupon::before,
.coupon::after {
  content: "";
  position: absolute;
  top: 50%;
  width: 12px;
  height: 12px;
  background: transparent;  /* 网页背景色，伪装成挖空 */
  border-radius: 50%;
  transform: translateY(-50%);
}

.coupon::before {
  left: -6px;
  {% if request.path == '/collections/urtopia-black-friday-sale' %}
  background-color: #1C1B19;
  {% else %}
    background-color: rgb(247 248 250);
  {% endif %}
}

.coupon::after {
  right: -6px;
  background-color: #fff;
}

</style>
<div data-product-handle="{{  product_variants.first.product.handle }}" class="er-bg-white product-card" {% unless product_variants.size != 0 %}style="display:none;"{% endunless %}>
  <div class="coupon">
    <span style=" display: block;padding: 19px 5px;border-left-width: 2px;border-left-color: #fff;border-left-style: dashed;"></span>
    <span>{{ product_variants.first.product.compare_at_price |  minus: product_variants.first.product.price | money_without_trailing_zeros }} OFF</span>
  </div>
  <img
    loading="lazy"
    width="371"
    height="232"
    fetchpriority="low"
    src="{{ product_variants.first.featured_image | image_url: width: 600 }}"
    class="variant-image"
    alt=""
  >
  <h3 class="u20DemiBold_v2 er-mt-6">{{ product_variants.first.product.title }}</h3>
  <div class="u14Light_v2">{{ product_description }}</div>
  <div class="flex-1 mobileHide"></div>
  <div class="u14Light_v2 sssss">
    {% for uhmaya in product_uhmaya %}
     {% assign text = uhmaya | split: "---" %}
      <div class="er-flex er-flex-col">
        <span class="text-size16 er-font-bold">{{ text.first }}</span>
        <span class="er-opacity-65 text-size12">{{ text.last }}</span>
      </div>
      {% if forloop.index < 4 %}
        <i></i>
      {% endif %}
    {% endfor %}
  </div>
  <div class="product_price">
    <div class="u24DemiBold_v2" data-price="{{ product_variants.first.price | money_without_trailing_zeros }}">
      {{ product_variants.first.price | money_without_trailing_zeros }}
    </div>
    <div class="u14Light_v2" style="align-items: center;">
      Or &nbsp;<span>{{ product_variants.first.price | divided_by: 24 | money }}</span>/mo
      <span class="Klarna-logo er-ml-2">Klarna.</span>
      <span class="Klarna-logo er-ml-2" style="background-color: rgb(74, 74, 244);">{% render 'icon-affirm' %}</span>
    </div>
  </div>
  <div class="er-flex er-items-center er-justify-between mb:er-gap-x-10 er-pt-4">
    <div class="dots">
    {% if product_variant_options_find_sort %}
      {% assign product_variant_options_find_sort = product_variant_options_find_sort | split: ',' %}
      {% assign already_insert = '' %}
      {% assign size_index = 0 %}
      {% assign style_index = 0 %}

      {% for item in product_variants.first.options %}
        {% if product_variant_options_find_sort contains item %}
          {% assign size_index = forloop.index | minus: 1 %}
          {% if forloop.index == 2 %}
            {% assign style_index = 2 %}
          {% else %}
            {% assign style_index = 1 %}
          {% endif %}
          {% break %}
        {% endif %}
      {% endfor %}
      {% for option in product_variant_options_find_sort %}
        {% for variant in product_variants %}
          {% unless already_insert contains variant.options[style_index] %}
            {% if option == variant.options[size_index] %}
              <div
                data-product-discount-price="{{ product_discount_price }}"
                data-price="{{ variant.price }}"
                data-compare-at-price="{{ variant.compare_at_price }}"
                data-img="{{ variant.featured_image | image_url: width: 600 }}"
                data-variant="{{ variant.id }}"
                data-stye="{{ variant.options[style_index] }}"
                {% if already_insert == '' %}
                  class="active"
                {% endif %}
              ></div>
              {% assign already_insert = already_insert | append: variant.options[style_index] %}
              <link rel="prefetch" href="{{ variant.featured_image | image_url: width: 600 }}" type="image/webp" fetchpriority="low" as="image" crossorigin>
            {% endif %}
          {% endunless %}
        {% endfor %}
      {% endfor %}
    {% else %}
      {% for variant in product_variants %}
        <div
          data-product-discount-price="{{ product_discount_price }}"
          data-price="{{ variant.price }}"
          data-compare-at-price="{{ variant.compare_at_price }}"
          data-img="{{ variant.featured_image | image_url: width: 600 }}"
          data-variant="{{ variant.id }}"
          data-stye="{{ variant.options.last }}"
          {% if forloop.index == 1 %}
            class="active"
          {% endif %}
        ></div>
        <link rel="prefetch" href="{{ variant.featured_image | image_url: width: 600 }}" type="image/webp" fetchpriority="low" as="image" crossorigin>
      {% endfor %}
    {% endif %}
  </div>
    <a href="{{ product_url }}?variant=43780147511544" target="_blank" class="my-button my-button-white">Shop now</a>
  </div>
</div>
