 {% assign current_article_id = article.id %}
 
 <section class="grid-box grid-columns-2 margin-top-60 margin-bottom-60 explore mb-grid-columns-1">
    <img class="lozad" data-src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/20240118-170647.jpg?v=1705568844" alt="">
    <div>
        <img src="https://cdn.shopify.com/s/files/1/0583/5810/4213/t/63/assets/mask-group-382x-1671691876009.png" alt="">
        <h3 class="mb-font-size-28">Explore the</h3>
        <h3 class="mb-font-size-28">Urtopia Carbon 1 Pro</h3>
        <div class="margin-top-48">
          <a href="/pages/lightweight-ebike-urtopia-carbon-1-pro" class="my-button margin-right-16">Order Now</a>
          <a href="/pages/test-ride" class="my-button my-button-ghost">Test Ride</a>
        </div>
        <img src="https://cdn.shopify.com/s/files/1/0583/5810/4213/t/63/assets/mask-group-392x-1671691876012.png" alt="">
    </div>
  </section>
  <footer class="padding-bottom-120 mb-padding-bottom-80">
    <section class="more-stories">
      <h2 class="text-center padding-top-40 padding-bottom-60 mb-padding-bottom-4 mb-font-size-36 mb-text-left">More Stories</h2>
      <div class="grid-box grid-columns-3 grid-column-gap-32 mb-grid-columns-1">
        {% assign count = 0 %}
        {% for article in blogs.blog.articles %}
          {% unless current_article_id == article.id %}
            {% assign count = count | plus:1 %}
            {% if count < 4 %}
              <a href="{{ article.url }}" class="flex flex-column border-radius-10 mb-margin-top-40" style="overflow: hidden;border: 1px solid #e6e6e6;">
                <div class="lozad" data-background-image="{{ article.image.src | image_url: width: 400 }}"></div>
                <div class="flex-1 padding-top-24 padding-bottom-24 padding-right-12 padding-left-12 mb-padding-12">
                  <h6 class="color-orange font-size-16 margin-bottom-4">Blog</h6>
                  <h5 class="mb-font-size-20">{{ article.title }}</h5>
                </div>
              </a>
            {% endif %}
          {% endunless %}
        {% endfor %}
      </div>
    </section>
  </footer>