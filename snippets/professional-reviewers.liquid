<style>
.tab-pane {
    display: none;
}

.tab-nav {
    display: flex;
    gap: 20px;
}

.tab-nav a {
    flex: 1;
    display: block;
    background: #fff;
    color: #000;
    border-radius: 10px;
    height: 60px;
    font-size: 20px;
    text-align: center;
    line-height: 60px;
    font-weight: 500;
    overflow: hidden;
    white-space: nowrap;
    transition: all 0.3s;
}

.tab-nav a.active {
    background-color: #000;
    color: #fff;
}

@media (max-width: 768px) {
    .tab-nav {
        gap: 8px;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
    }

    .tab-pane {
        overflow-x: scroll;
        padding-bottom: 30px;
    }

    .tab-pane > div {
        min-width: 75vw;
    }

    .tab-nav a {
        font-size: 14px;
        flex: auto;
        height: 42px;
        line-height: 42px;
    }
}
</style>

