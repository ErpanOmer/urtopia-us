    <div class="sale" data-sale-end-time="{{ settings.sale_end_time }}">
      <div class="u14DemiBold_v2"></div>
      <div>
        <div>
          <span class="u36DemiBold_v2">00</span>
          <span>Days</span>
        </div>
        <div>
          <span class="u36DemiBold_v2">00</span>
          <span>Hours</span>
        </div>
        <div>
