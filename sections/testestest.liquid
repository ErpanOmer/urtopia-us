{{ 'outlet_v4.scss.css' | asset_url | stylesheet_tag: preload: true }}

<style>
  .ebike-products {
    padding: 0;
  }
  /* Filters container specific styles */
  .filters-container {
    padding: 2rem;
    background-color: #fff;
    border-radius: 7px;
  }
  
  @media (max-width: 768px) {
    .filters-container {
      display: none;
    }
  }
</style>

<section class="er-bg-background er-py-40">
  <div class="er-mx-auto er-max-w-screen-2xl er-flex er-gap-x-12">
    <div class="filters filters-container">
      {% render 'collection-filters' %}
    </div>
    <div class="ebike-products er-flex-1">
      {% render "product-cards" %}
    </div>
  </div>
</section>
