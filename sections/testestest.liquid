            isDown = false
        })


        $('.quality .items').on('pointermove', function (e) {
            if (!isDown) {
                return false
            }

            e.preventDefault();

            requestAnimationFrame(() => {
                const x = e.originalEvent.pageX - $(this).offset().left;
                const walk = (x - startX) * 1.5; // 3 是滚动速度
                $(this).scrollLeft(scrollLeft - walk)
            })

        })


        let isScrolling = false;
        $('.quality .items').on('wheel', function (e) {
            e.preventDefault(); // 防止页面滚动

            requestAnimationFrame(() => {
                let delta = Math.floor(e.originalEvent.deltaY / 2);
                this.scrollLeft += delta;
            })
        });



