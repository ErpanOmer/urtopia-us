<style>
  body{    
    width:100%;
    min-width:1160px;

  }

  section {
    width:100%;
    overflow:hidden;
	height: calc(100vh - 73px);
    max-height:calc(100vh - 73px);
    min-height:716px;
 	position: relative;
  }

  section#coverImage{
    height: calc(100vh - 107px);
    display:flex;
    justify-content: center;
    min-height:682px;
    background-image: url("https://cdn.shopify.com/s/files/1/0583/5810/4213/files/bg1.jpg?v=1657473215");
    background-size: cover;
  }
  .scrollBike{
    width:calc(100vw*1160/1440);
    max-width:1160px;
    display:flex;
  }	
  .scrollBike>.imgWrap,
  .scrollBike>.text{
  	flex:1;
  }
  .scrollBike>.imgWrap{
  	display:flex;
  }
  
  .imgWrap{
    position:absolute;
    top: 15%;
    right:9%;
    width:50%;
    background: url("https://cdn.shopify.com/s/files/1/0583/5810/4213/files/shadow.png?v=1657473668") right bottom/cover no-repeat;
  }
  .imgWrap img{
 	width:100%;
    transform-origin: 17% 94%;
  }
  .text{
    position:absolute;
    bottom:90%;
    left:8%;
    white-space:nowrap;
    font-weight:700;
  }
  .text>div{
    position:absolute;
    top:0;
    left:0;
  	font-weight:650;
    font-size:calc(100vw*120/1920);
    line-height:normal;
    background-image: linear-gradient(113deg, #283141 0%, #737A84 100%);  
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }
  .text>.text2,
  .text>.text3,
  .text>.text4{
    transform: translateY(120vh);
    opacity:0;
  }
  
  .text4 .ring_icon{
  	width:140px;
    height:86px;
    background: url("https://cdn.shopify.com/s/files/1/0583/5810/4213/files/ring.png?v=1657474799") no-repeat;
    background-size:100% 100%;   
  }
  @media screen and (max-width: 990px){
    body{    
      width:100%;
      max-width:100%;
      min-width:auto;
      overflow-x:hidden;
    }
    section{
      min-height:auto;
    }
    section#coverImage{
      min-height:auto;
      background-image: url("https://cdn.shopify.com/s/files/1/0583/5810/4213/files/bg2.jpg?v=1657473226");
    }
    .scrollBike{
      margin: 0 5%;
      width:95%;
      flex-direction: column-reverse;
      justify-content: center;
    }

    .scrollBike .imgWrap{
      width: 100%;
      left: 0px;
      right: 0px;
      bottom:10%;
      top:auto;
    }
    
    .scrollBike .imgWrap,
    .scrollBike .text{
    	flex:0;
    }

    .scrollBike .text>div:nth-child(1),
    .scrollBike .imgWrap,
    .scrollBike .text{
      position:static;
    }
    .scrollBike .text{
      position:relative;
      display: flex;
      align-items: center;
      top:-50px;
      left:0;
    }
    .text{
    	white-space:normal;
    }
    .text4 .ring_icon{
    	width:90px;
      	height:55px;
    }
    .scrollBike .text>div{
      color:black;
      font-size:48px;
      line-height:54px;
    }
  }
  
</style>

