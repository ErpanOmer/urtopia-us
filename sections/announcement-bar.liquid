<style>
  #announcement-bar {
    height: 38px;
    overflow: hidden;
    background-color: var(--sale-color4);
    color: #fff;
    text-align: center;
  }

  #announcement-bar .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  #announcement-bar .swiper-slide > p {
    line-height: 19px;
    direction: ltr;
  }

  #announcement-bar .swiper-slide > p > span {
    font-weight: bold;
    color: #ffda12;
  }

  #announcement-bar .swiper-slide > p > a {
    color: #fff;
    text-decoration: underline;
    cursor: pointer;
  }

  #announcement-bar .swiper-slide > p > a:hover {
    color: #d6d6d6;
  }


  .announcement-bar {
    display: none;
  }

  #announcement-bar > img {
    height: 55px;
    width: auto;
    transform: translateY(5%);
  }

  
</style>

  <div id="announcement-bar" class="announcement-bar-common" dir="rtl">
    <div class="swiper-wrapper">
      <div class="swiper-slide"><p>{{ settings.carbon_ebike_discount_price | money_without_trailing_zeros }} off + {{ settings.carbon_ebike_free_accessories_count }} Freebies with Carbon 1s.<a href="/products/urtopia-carbon-e-bike">Get yours Now</a></p></div>
      <div class="swiper-slide"><p>Financing with 24 months, 0% APR. <a href="/products/urtopia-carbon-e-bike">Get yours Now</a></p><img style="width:45px;margin-right:10px;" src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/Image_154_2x_a6f60481-bf07-4fd4-93c7-8b9964570bbd.png?v=1685605445"/></div>
      <div class="swiper-slide"><p>Try Urtopia Carbon 1 for Free <br class="pcHide"> <a href="/pages/test-ride">Book My Test Ride Now</a></p></div>
    </div>
  </div>

  <script src="https://cdn.shopify.com/s/files/1/0583/5810/4213/files/8-swiper-bundle.min.js?v=1663912984"> </script>
<script>
  const length = document.querySelectorAll('#announcement-bar .swiper-wrapper > .swiper-slide').length

  length > 1 && new Swiper('#announcement-bar', {
    direction: 'vertical',
    speed: 600,
    loop: true,
    autoplay: {
      disableOnInteraction: false,
      pauseOnMouseEnter: true,
      delay: 5000,
      // reverseDirection: true
    },
  });
</script>

{% if template == "product.pf-9b29433f" or template == "page.pf-198df0c3" %}
  <div id="announcement-bar" class="pcHide"  style="height: 60px;display: flex;flex-direction: column;align-items: center;justify-content: flex-start;text-align: center;">
    <div class="u11Light_v2">{{ settings.sale_name }} ends in:</div>
    <img src="http://i.countdownmail.com/2nt2wp.gif"/>
  </div>

  <script>
    if (global_config.is_mobile) {
      $('.announcement-bar-common').hide()
    }
  </script>
{% endif %}

{%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when 'announcement' -%}
  <div class="announcement-bar color-{{ block.settings.color_scheme }} gradient" style="background-color:#1C2A3B;"
    role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
    {%- if block.settings.text1 != blank -%}
    {%- if block.settings.link != blank -%}
    <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
      {%- endif -%}
      <p class="announcement-bar__message h5">
        {{ block.settings.text1 | escape }}
        {%- if block.settings.impText != "default" -%}
        <span style="font-weight:bold;color:#FFDA12;">{{ block.settings.impText}} </span>
        {%- endif -%}
        {%- if block.settings.text2 != "default" -%}
        {{ block.settings.text2 | escape }}
        {%- endif -%}
        {%- if block.settings.link != blank -%}
        {% render 'icon-arrow' %}
        {%- endif -%}
      </p>
      {%- if block.settings.link != blank -%}
    </a>
    {%- endif -%}
    {%- endif -%}
  </div>
  {%- endcase -%}
  {%- endfor -%}
  
  {% schema %}
  {
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
  {
  "type": "announcement",
  "name": "t:sections.announcement-bar.blocks.announcement.name",
  "settings": [
  {
  "type": "text",
  "id": "text1",
  "default": "Welcome to our store",
  "label": "t:sections.announcement-bar.blocks.announcement.settings.text1.label"
  },
  {
  "type": "text",
  "id": "impText",
  "default": "default",
  "label": "t:sections.announcement-bar.blocks.announcement.settings.impText.label"
  },
  {
  "type": "text",
  "id": "text2",
  "default": "default",
  "label": "t:sections.announcement-bar.blocks.announcement.settings.text2.label"
  },
  {
  "type": "select",
  "id": "color_scheme",
  "options": [
  {
  "value": "accent-1",
  "label": "t:sections.all.colors.accent_1.label"
  },
  {
  "value": "accent-2",
  "label": "t:sections.all.colors.accent_2.label"
  },
  {
  "value": "background-1",
  "label": "t:sections.all.colors.background_1.label"
  },
  {
  "value": "background-2",
  "label": "t:sections.all.colors.background_2.label"
  },
  {
  "value": "inverse",
  "label": "t:sections.all.colors.inverse.label"
  }
  ],
  "default": "accent-1",
  "label": "t:sections.all.colors.label"
  },
  {
  "type": "url",
  "id": "link",
  "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
  }
  ]
  }
  ],
  "default": {
  "blocks": [
  {
  "type": "announcement"
  }
  ]
  }
  }
  {% endschema %}
